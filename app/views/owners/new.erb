<h1>Create a New Owner</h1>

<form action="/owners" method="POST">
  <h3>Select an existing pet or create a new one below.</h3>
  <label for="name">Name:</label>
  <input type="text" name="owner[name]" id="owner_name">
  <br />
  <p>Select an existing pet or create a new one below.</p>

  <h3>Existing Pets</h3>

  <% @pets.each do | pet | %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%= pet.id %>"><%= pet.name %>
    <br />
  <% end %>

  <br />

  <h3>New Pet</h3>

  <label for="pet_name">Pet Name:</label>
  <input type="text" name="pet[name]" id="pet_name">
  <br />
  <label for="pet_breed">Pet Breed:</label>
  <input type="text" name="pet[breed]" id="pet_breed">
  <br /><br />

  <input type="submit" value="Create Owner">
</form>
