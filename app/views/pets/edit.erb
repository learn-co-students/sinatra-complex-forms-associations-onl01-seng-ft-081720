<h1>Update Pet</h1>
<form method='post' action='/pets/<%= @pet.id %>'>
    <input type="hidden" id="hidden" name="_method" value="patch">
    Name: <input type="text" id="pet_name" name="pet[name]" value=<%= @pet.name %>><br>
    
    <br>Owner:<br>
    <% @owners.each do |owner| %>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input><br>
    <% end %><br>

    <h3>New Owner</h3>
    <label>Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>

    <input type="submit" value="Update Pet">
</form>

