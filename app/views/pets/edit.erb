<h1>Update Pet</h1>
<h2>Edits for <%= @pet.name %></h2>

  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="edit_for_name">Edit the Pet's Name:</label>
    <input type="text" name="pet[name]" id= "pet_name" value="<%= @pet.name %>"><br />
    <label for="edit_for_breed">Edit the Pet's Breed:</label>
    <input type="text" name="pet[breed]" id="pet_breed" value="<%= @pet.breed %>">
    <br />
    <p>Select an existing owner or create a new one below.</p>

    <h3>Existing Owners</h3>
    <% Owner.all.each do | owner | %>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%= owner.name %><br />
    <% end %>
    <br>

    <h3>New Owner</h3>
    <label for="owner_name">Owner Name: </label>
    <input type="text" name="owner[name]" id="owner_name">
    <br /><br />

    <input type="submit" value="Update Pet">
  </form>

