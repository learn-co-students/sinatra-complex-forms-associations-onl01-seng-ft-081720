<h1>Update Pet</h1>
<h2>Edits for <%= @pet.name %></h2>
 
  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"><br>
    <input type="submit" value="Update Pet">
 
    <h3>New Owner</h3>
    <label>Owner Name: </label><br>
    <%#binding.pry%>
    <input type="checkbox" id="<%= @owner.id %>" value=" <%= @owner.id %>">
    <input type="text" name="owner[name]" id="owner_name" value="<%= @owner.name %>">
    <br><br>
    <input type="submit" value="Update Owner">
  </form>

