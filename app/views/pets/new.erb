<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br>

  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
  <%#binding.pry%>
    <input type="checkbox" name="<% owner.id %>%" id="<%= owner.id %>"><%= owner.name %><br>
  <% end %>
  <br>

  <input type="text" name="pet[name]">

  <h3>New Pet</h3>
  <label>Pet Name: </label>
  <br>
  <input type="text" name="pet[name]" id="pet_name">
  <br><br>

  <input type="submit" value="Create Pet">

  <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name">
  <br><br>

  <input type="submit" value="Create Owner">
</form>